
[searchposts]
<section class="portfolio">
    <div class="container">

    [fullresult]
        <div class="col-12">
            <article class="">
                <div class="row">
                    <div class="col-12 col-lg-3">
                        <div class="mb-2 crop-box-h195">
                            <a href="{full-link}">
                                <img src="{image-1}" alt="{title}" class="img-fluid">
                            </a>
                        </div>
                    </div>
                    <div class="col-12 col-lg-9">
                        <div class="post">
                            <h2 class="mb-2 h5">
                                <a href="{full-link}">{title}</a>
                            </h2>
                            <p class="text-muted">{short-story limit="200"}</p>
                            <a href="{full-link}" class="badge bg-primary text-white p-2">Подробнее <i class="fa fa-arrow-right"></i></a>
                        </div>
                    </div>
                </div>
            </article>
        </div>
    [/fullresult]
    </div>
</section>      
[/searchposts]
